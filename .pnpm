#!/usr/bin/env bash

# Common
alias pi='pnpm install --frozen-lockfile'   # (p)pm (i)nstall
alias pt='pnpm test'                        # (p)pm (t)est
alias ptw='pnpm run test:watch'             # (p)pm (t)est (w)atch
alias ptu='pnpm run test -- -u'             # (p)pm (t)est (u)pdate
alias ps='pnpm start'                       # (p)pm (s)tart
alias pd='pnpm run dev'                     # (p)pm (r)un (d)ev
alias pl='pnpm run lint -- --quiet'         # (p)pm (l)int
alias plf='pnpm run lint:fix'               # (p)pm (l)int (f)ix
alias pb='pnpm run build'                   # (p)pm (r)un (b)uild
alias pcl='pnpm run storybook'              # (p)pm (c)omponent (l)ibrary
alias phc='pnpm run health-check'           # (p)pm (h)ealh (c)heck
